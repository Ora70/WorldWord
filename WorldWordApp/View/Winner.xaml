        <Button x:Name="button" Content="main window &gt;&gt;" HorizontalAlignment="Left" Height="37" Margin="586,344,0,0" VerticalAlignment="Top" Width="170" Click="toMainWindow_Click"/>
        <Button x:Name="button1" Content="High Scores" HorizontalAlignment="Left" Height="37" Margin="48,344,0,0" VerticalAlignment="Top" Width="152" Click="toScores_Click"/>
        
    </Grid>
</Window>
